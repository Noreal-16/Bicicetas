extends ../layout

block content
    a.btn.btn-primary.py-3.px-4(href='/bicicleta/create') Nueva Bicicleta
    a.nav-link.py-3.px-0.px-lg-3.rounded.js-scroll-trigger(href='/') Home
    table.table
        thead
            tr
                th(scope= 'col') #
                th(scope= 'col') color
                th(scope= 'col') modelo
                th(scope= 'col') ubicacion
                th(scope= 'col') 
                th(scope= 'col') 
        tbody
            each bici in bicis 
                tr 
                    td(scope= 'row') 
                        = bici.id
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion 
                    td
                        a(href='/bicicleta/'+bici.id+'/update') Actualiza
                    td
                        form.inline( method= 'post' action= '/bicicleta/'+bici.id+'/delete')
                            input(type= 'hidden' name='id' value= bici.id)
                            button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Eliminar'

            